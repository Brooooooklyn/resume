{
  "name": "resume",
  "version": "1.0.0",
  "description": "LongYinan's resume",
  "private": true,
  "scripts": {
    "build": "mkdir -p public && yarn build:webpack && node lambda/render.js",
    "build:webpack": "rm -rf lambda && NODE_ENV=production webpack --config ./tools/webpack.prod.js",
    "deploy": "yarn build && node ./cdn.js",
    "format": "run-p format:md format:json format:yaml format:source",
    "format:md": "prettier --parser markdown --write './**/*.md'",
    "format:json": "prettier --parser json --write './**/*.json'",
    "format:source": "prettier --config ./package.json --write './**/*.{js,ts}'",
    "format:yaml": "prettier --parser yaml --write './**/*.{yml,yaml}'",
    "start": "webpack-dev-server --config ./tools/webpack.dev.js --progress"
  },
  "keywords": ["Resume"],
  "author": "lynweklm@gmail.com",
  "license": "MIT",
  "devDependencies": {
    "@svgr/webpack": "^5.4.0",
    "@types/node": "^14.11.5",
    "@types/react": "^16.9.51",
    "@types/react-dom": "^16.9.8",
    "cos-nodejs-sdk-v5": "^2.8.2",
    "emotion-ts-plugin": "^0.7.0",
    "file-loader": "^6.1.0",
    "fork-ts-checker-webpack-plugin": "^5.2.0",
    "happypack": "^5.0.1",
    "html-loader": "^1.3.1",
    "html-webpack-plugin": "^4.5.0",
    "husky": "^4.3.0",
    "lint-staged": "^10.4.0",
    "markdown-loader": "^6.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.1.2",
    "raw-loader": "^4.0.1",
    "readdir-enhanced": "^6.0.4",
    "svgo": "^1.3.2",
    "svgo-loader": "^2.2.1",
    "ts-loader": "^8.0.4",
    "typescript": "^4.0.3",
    "url-loader": "^4.1.1",
    "webpack": "^4.44.2",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0",
    "webpack-merge": "^5.2.0",
    "webpack-node-externals": "^2.5.2"
  },
  "dependencies": {
    "@ant-design/icons": "^4.2.2",
    "@emotion/core": "^10.0.35",
    "@emotion/css": "^10.0.27",
    "@emotion/styled": "^10.0.27",
    "emotion": "^10.0.27",
    "emotion-server": "^10.0.27",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "tb-icons": "^0.2.148",
    "tslib": "^2.0.2"
  },
  "prettier": {
    "printWidth": 80,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all",
    "arrowParens": "always",
    "parser": "typescript"
  },
  "lint-staged": {
    "*.@(js|ts|tsx)": ["prettier --write"],
    "*.@(yml|yaml)": ["prettier --parser yaml --write"],
    "*.md": ["prettier --parser markdown --write"],
    "*.json": ["prettier --parser json --write"]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
