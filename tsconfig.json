{
  "compilerOptions": {
    "strict": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noImplicitThis": true,
    "noUnusedParameters": true,
    "importHelpers": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2018",
    "moduleResolution": "node",
    "module": "esnext",
    "jsx": "react-jsx",
    "skipLibCheck": true
  },
  "exclude": ["node_modules", ".yarn", ".husky", ".github", "lambda"]
}
